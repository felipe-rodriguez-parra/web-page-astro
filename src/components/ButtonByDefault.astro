---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;

---

<a href={ href }>  
  <slot />
  { text }
</a>

<style>
  a {
    border: 2px solid var(--black-blue);
    border-radius: 5px;
    color: var(--black-blue);
    display: inline-block;
    font-size: 22px;
    height: 2rem;
    line-height: 1.875rem;
    margin: 0.5rem 0;
    padding: 0.5rem 1rem;
    text-align: center;
    text-decoration: none;
    transition:
      color 0.3s,
      background-color 0.3s,
      border-color 0.3s;
    width: 8.75rem; 
  }

  a:hover {
    background-color: var(--black-blue);
    border-color: var(--blue);
    color: #fff;
  }

  @media (min-width: 768px) {

    a {
      margin: 0 1rem;
    }
  }

  @media (min-width: 1024px) {

    a {
      font-size: 1.5rem;
      line-height: 2rem;
    }
  }
  .icon {
    margin-right: 0.5rem;
  }
</style>